{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-ogpay" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    {% if success %}
      <div class="alert alert-success alert-dismissible"><i class="fa fa-check"></i> {{ success }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-ogpay" class="form-horizontal">
          <ul class="nav nav-tabs" id="tabs">
            <li class="active"><a href="#tab_general" data-toggle="tab">{{ tab_general }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab_general">
			<div class="tab-panes">
                <h2 class="section-title">General</h2>
                <div class="form-group">
                  <label class="col-sm-2">{{ text_ogpay_learn }}</label>
                  <div class="col-sm-10" id="bt-connect"></div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-checkout-title">{{ entry_checkout_title }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_ogpay_checkout_title" value="{{ payment_ogpay_checkout_title }}" placeholder="{{ entry_checkout_title_placeholder }}" id="input-checkout-title" class="form-control" />
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-checkout-description">{{ entry_checkout_description }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_ogpay_checkout_description" value="{{ payment_ogpay_checkout_description }}" placeholder="{{ entry_checkout_description_placeholder }}" id="input-checkout-description" class="form-control" />
                  </div>
                </div>
			  <div class="form-group">
				<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
				<div class="col-sm-10">
				  <select name="payment_ogpay_status" id="input-status" class="form-control">
					{% if payment_ogpay_status %}
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
					{% else %}
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %}
				  </select>
				</div>
			  </div>
				  
			</div>	  
            <div class="tab-panes">
			    <h2 class="section-title">Keys & URLs Configuration</h2>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-merchantname">{{ entry_merchant_name }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_ogpay_merchant_name" value="{{ payment_ogpay_merchant_name }}" placeholder="{{ entry_merchant_name }}" id="input-merchant-name" class="form-control" />
					{% if error_merchantname %}
                      <div class="text-danger">{{ error_merchantname }}</div>
                    {% endif %}
                  </div>
                </div>

                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-authkey">{{ entry_auth_key }}</label>
                  <div class="col-sm-10">
                      <input type="text" name="payment_ogpay_auth_key" value="{{ payment_ogpay_auth_key }}" placeholder="{{ entry_auth_key }}" id="input-auth-key" class="form-control" />
					{% if error_authkey %}
                      <div class="text-danger">{{ error_authkey }}</div>
                    {% endif %}					  
                  </div>
                </div>
				
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-secretkey">{{ entry_secret_key }}</label>
                  <div class="col-sm-10">
                      <input type="text" name="payment_ogpay_secret_key" value="{{ payment_ogpay_secret_key }}" placeholder="{{ entry_secret_key }}" id="input-secret-key" class="form-control" />
					{% if error_secretkey %}
                      <div class="text-danger">{{ error_secretkey }}</div>
                    {% endif %}						  
                  </div>
                </div>

                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-endpointurl">{{ entry_endpoint_url }}</label>
                  <div class="col-sm-10">
                      <input type="text" name="payment_ogpay_endpoint_url" value="{{ payment_ogpay_endpoint_url }}" placeholder="{{ entry_endpoint_url }}" id="input-endpoint-url" class="form-control"/>
					{% if error_endpointurl %}
                      <div class="text-danger">{{ error_endpointurl }}</div>
                    {% endif %}						  
                  </div>
                </div>
            </div>
            <div class="tab-panes" >
			<h2 class="section-title">Payment Methods Configuration</h2>
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_payment_method_mode }}</label>
                <div class="col-sm-10">
                  <label class="radio-inline"> {% if payment_ogpay_payment_method_mode=="customize" %}
                      <input type="radio" name="payment_ogpay_payment_method_mode" value="customize" checked="checked"/>
                      Customize Your Payment Form
                    {% else %}
                      <input type="radio" name="payment_ogpay_payment_method_mode" value="customize"/>
                      Customize Your Payment Form
                    {% endif %} </label> <label class="radio-inline"> {% if payment_ogpay_payment_method_mode=="ogpayment" %}
                      <input type="radio" name="payment_ogpay_payment_method_mode" value="ogpayment" checked="checked"/>
                      Ogpay Payment Form
                    {% else %}
                      <input type="radio" name="payment_ogpay_payment_method_mode" value="ogpayment"/>
                      Ogpay Payment Form
                    {% endif %} </label>
                </div>
              </div>    
              <div class="form-group required">
              <div class="table-responsive">
                <table id="customize-method" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left"><label class="control-label" for="input-paymentmethod">Payment Method</label></td>
                      <td class="text-right"><label class="control-label" for="input-channelcode">Channel Code</label></td>
					  <td class="text-right"><label class="control-label" for="input-currencycode">Currency Code</label></td>
                      <td></td>
                    </tr>
                  </thead>
                  <tbody>

                    {% set customize_row = 0 %}
                    {% for customize_method in customize_methods %}
                      <tr id="customize-row{{ customize_row }}">
                        <td class="text-left"><input type="text" name="payment_ogpay_customize_method[{{ customize_row }}][name]" value="{{ customize_method.name }}" placeholder="{{ entry_payment_channel_name }}" class="form-control"/>
                        <span class="help-box">{{help_customize_method}}</span></td>
						
                        <td class="text-right"><input type="text" name="payment_ogpay_customize_method[{{ customize_row }}][code]" value="{{ customize_method.code }}" placeholder="{{ entry_payment_channel_code }}" class="form-control"/></td>
						
                        <td class="text-right"><input type="text" name="payment_ogpay_customize_method[{{ customize_row }}][currency]" value="{{ customize_method.currency }}" placeholder="{{ entry_payment_channel_currency }}" class="form-control"/></td>						

                        <td class="text-left"><button type="button" onclick="$('#customize-row{{ customize_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
                      </tr>
                      {% set customize_row = customize_row + 1 %}
                    {% endfor %}
                  </tbody>

                  <tfoot>
                    <tr>
                      <td colspan="3"></td>
                      <td class="text-left"><button type="button" onclick="addCustomize();" data-toggle="tooltip" title="{{ button_customize_add }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                    </tr>
                  </tfoot>
                </table>			  
			  
			  
                <table id="ogpayment-method" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left"><label class="control-label" for="input-paymentmethod">Payment Method</label></td>
                      <td class="text-left"><label class="control-label" for="input-paymentcurrency">Payment Currency</label></td>					  
                    </tr>
                  </thead>
                  <tbody>
                      <tr id="ogpayment_method">
                        <td class="text-left"><input type="text" 
						name="payment_ogpay_ogpayment_name" 
						value="{{payment_ogpay_ogpayment_name}}" placeholder="{{ entry_ogpay_ogpayment_placeholder }}" class="form-control"/>
						<span class="help-box" >{{ help_ogpayment_method }}</span></td>
                        <td class="text-left"><input type="text" 
						name="payment_ogpay_ogpayment_currency" 
						value="{{payment_ogpay_ogpayment_currency}}" placeholder="{{ entry_ogpayment_currency }}" class="form-control"/>
						<span class="help-box" >{{ help_ogpayment_currency }}</span></td>
						
                      </tr>
                  </tbody>
                </table>

              </div>			  
              </div>			  
            </div> 
            <div class="tab-panes">
				<h2 class="section-title">Payment Configration</h2>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-language">
                      {{ entry_ogpay_language }}</label>
                  <div class="col-sm-10">
                      <input type="text" name="payment_ogpay_language" value="{{ payment_ogpay_language }}" placeholder="{{entry_ogpay_language_placeholder}}" id="input-ogpay-language" class="form-control"/>
                      <span class="help-box" >{{ help_language }}</span>
					{% if error_language %}
                      <div class="text-danger">{{ error_language }}</div>
                    {% endif %}						  
                  </div>
                </div>				
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-currency">{{ entry_ogpay_currency }}</label>
                  <div class="col-sm-10">
                      <input type="text" name="payment_ogpay_currency" value="{{ payment_ogpay_currency }}" placeholder="{{entry_ogpay_currency}}" id="input-ogpay-currency" class="form-control"/>
					{% if error_currency %}
                      <div class="text-danger">{{ error_currency }}</div>
                    {% endif %}					  
                  </div>
                </div>	
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-tunnel">{{ entry_ogpay_tunnel }}</label>
                  <div class="col-sm-10">
                      <input type="text" name="payment_ogpay_tunnel" value="{{ payment_ogpay_tunnel }}" placeholder="{{entry_ogpay_tunnel}}" id="input-ogpay-tunnel" class="form-control" />
                  </div>
                </div>
            </div>
			</div>
         </div>
        </form>
      </div>
    </div>
  </div>
</div>
<style>
  #tab-transaction .form-group {
	  margin-left: 0;
	  margin-right: 0;
  }
</style>
  <script type="text/javascript"><!--
     $(document).ready(function(){
                $('#customize-method').hide();
                $('#ogpayment-method').hide();				
            var radioValue = $("input[name='payment_ogpay_payment_method_mode']:checked").val();
            if(radioValue=="customize"){
                $('#customize-method').show();
				$('#ogpayment-method').hide();
            }
            if(radioValue=="ogpayment"){
                $('#customize-method').hide();
				$('#ogpayment-method').show();
            }	

		$("input[name='payment_ogpay_payment_method_mode']").change(function(){
            var radioValue = $("input[name='payment_ogpay_payment_method_mode']:checked").val();
            if(radioValue=="customize"){
                $('#customize-method').show();
				$('#ogpayment-method').hide();
            }
            if(radioValue=="ogpayment"){
                $('#customize-method').hide();
				$('#ogpayment-method').show();
            }		
		});			
    }); 
  var customize_row = {{ customize_row }};
  function addCustomize() {
	  html = '<tr id="customize-row' + customize_row + '">';
	  html += '  <td class="text-left"><input type="text" name="payment_ogpay_customize_method[' + customize_row + '][name]" value="" placeholder="{{ entry_payment_channel_name }}" class="form-control" />';
	  html += '  <span class="help-box">{{help_customize_method}}</span></td>';
	  html += '  <td class="text-right"><input type="text" name="payment_ogpay_customize_method[' + customize_row + '][code]" value="" placeholder="{{ entry_payment_channel_code }}" class="form-control" /></td>';
	  html += '  <td class="text-right"><input type="text" name="payment_ogpay_customize_method[' + customize_row + '][currency]" value="" placeholder="{{ entry_payment_channel_currency }}" class="form-control" /></td>';	  
	  html += '  <td class="text-left"><button type="button" onclick="$(\'#customize-row' + customize_row + '\').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
	  html += '</tr>';

	  $('#customize-method tbody').append(html);

	  customize_row++;
  }
  
  

  //--></script>

<style>
h2.section-title {
    font-size: 16px;
    font-weight: bold;
    padding-left: 2%;
}
.tab-panes {
    margin-top: 20px;
    border-top: 1px solid #cdcccc;
    padding: 35px 10px;
}
.help-box{
    padding: 12px 0px 0px 0px;
    font-size: 11px;
    color: #aaaaac;
    font-style: italic;
}
</style>
{{ footer }}
